{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["es2016", "dom"]
  },
  "include": ["src/**/*"]
}
